<Window x:Class="GestureRecorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IAVA Gesture Recorder" Height="370" Width="240" Background="#FF313131">
    <StackPanel VerticalAlignment="Center">
        <Button Content="Create Gesture" Margin="1,2,1,2" Height="100" Name="btnCreate" Click="btnCreate_Click" />
        <Button Content="Test Gestures" Margin="1,2,1,2" Height="100" Name="btnTest" Click="btnTest_Click" />
        <Button Content="Exit" Margin="1,2,1,2" Height="100" Name="btnExit" Click="btnExit_Click" />
    </StackPanel>
</Window>
