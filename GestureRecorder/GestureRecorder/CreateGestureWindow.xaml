<Window x:Class="GestureRecorder.CreateGestureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Gestures" Height="446" Width="1048" Background="#FF313131" ShowInTaskbar="False" WindowStyle="SingleBorderWindow" ResizeMode="NoResize">
    <DockPanel LastChildFill="True">
        <Border BorderBrush="Gray" CornerRadius="1" Width="150" DockPanel.Dock="Right">
            <StackPanel>
                <Button Content="Snapshot" Margin="2" Name="btnSnapshot" Height="30" />
                <Button Content="Next" Margin="2" Name="btnNext" Height="30"/>
                <Button Content="Cancel" Margin="2" Name="btnCancel" Click="btnCancel_Click" Height="30"/>
            </StackPanel>
        </Border>
        <StackPanel DockPanel.Dock="Right">
            <TextBlock Text="Select Joints to Record" HorizontalAlignment="Center" Foreground="Wheat"/>
            <Image Width="200" Height="Auto" Source="Resources/Skeleton.png" />
        </StackPanel>
        
        <ListBox Margin="4"/>
    </DockPanel>
</Window>
