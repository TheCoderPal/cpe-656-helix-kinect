<Window x:Class="Iava.Ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:esri="http://schemas.esri.com/arcgis/client/2009"
        Title="IAVA" Height="459" Width="731" x:Name="Window" Background="Black">
    <Grid>
        <esri:Map Width="{Binding ElementName=Window,Path=ActualWidth}" Height="{Binding ElementName=Window,Path=ActualHeight}" Background="White" Name="map1" WrapAround="True" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" 
                  Unloaded="OnMapUnloaded" Loaded="OnMapLoaded">
            <esri:Map.Layers>
                <esri:LayerCollection>
                    <esri:ArcGISTiledMapServiceLayer Url="http://services.arcgisonline.com/ArcGIS/rest/services/World_Street_Map/MapServer" />
                </esri:LayerCollection>
            </esri:Map.Layers>
        </esri:Map>
        <ToolBar Margin="12,0,12,12" Name="toolBar1" Height="26" VerticalAlignment="Bottom">
        </ToolBar>
    </Grid>
</Window>
