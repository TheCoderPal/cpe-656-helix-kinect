<Window x:Class="Iava.Ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:esri="http://schemas.esri.com/arcgis/client/2009"
        Title="IAVA" Height="541" Width="800" x:Name="Window" Background="Black">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="GlassButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <esri:Map Background="White" Name="map1" WrapAround="True" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" 
                  Unloaded="OnMapUnloaded" Loaded="OnMapLoaded">
            <esri:Map.Layers>
                <esri:LayerCollection>
                    <esri:ArcGISTiledMapServiceLayer Url="http://services.arcgisonline.com/ArcGIS/rest/services/World_Street_Map/MapServer"/>
                </esri:LayerCollection>
            </esri:Map.Layers>
        </esri:Map>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="10,10,10,0">
            <Button Name="btnAudioSynced" Style="{StaticResource GlassButton}" Width="30" Height="30" Background="Black" Foreground="White"  Margin="10" Content="A"/>
            <Button Name="btnGestureSynced" Style="{StaticResource GlassButton}" Width="30" Height="30" Background="Black" Foreground="White"  Margin="10" Content="G"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="10,10,10,0">
            <Border CornerRadius="10">
                <Image Name="kinectVideoFeed" Width="160" Height="120" />
            </Border>
        </StackPanel>
        <Popup x:Name="popStatus" 
               PlacementTarget="{Binding ElementName=map1}"
               Placement="Center" 
               AllowsTransparency="True"
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"
               PopupAnimation="Fade"
               StaysOpen="False"
               Height="50">
            <Border Background="Black" BorderThickness="1,1,1,1" CornerRadius="10,10,10,10" Opacity="0.65">
                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent">
                    <Label x:Name="lblStatus" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="20" Background="Transparent"/>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</Window>
